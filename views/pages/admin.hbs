<main id="content" class="container">
	{{#if error}}
        <div class="alert alert-danger mt-3" role="alert">{{error}}</div>
    {{/if}}
    <div class="dashboard-wrapper user-dashboard">
					<div class="table-responsive">
						{{#if data}}
						<table class="table">
							<thead>
								<tr>
									<th>ID</th>
									<th>Marca</th>
									<th>Modelo</th>
                                    <th>Imagen</th>
									<th>Descripcion</th>
									<th>Precio</th>
									<th>Caracteristicas</th>
									<th>Acciones</th>
                                    
								</tr>
							</thead>
							{{#each data}}
							<tbody>
								<tr>
									<td># {{id}}</td>
									<td>{{marca}}</td>
									<td>{{modelo}}</td>
									<td>{{url}}</td>
                                    <td>{{descripcion}}</td>
									<td>$ {{dolarApeso precio}}</td>
									<td>{{caracteristicas}}</td>
									<td><a href="/editar/{{id}}" class="btn btn-success">Editar</a>
                                    <a href="/eliminar/{{id}}" class="btn btn-danger">Eliminar</a></td>
								</tr>							
							</tbody>
							{{/each}}
						</table>
						{{else}}
						<h1>No hay productos </h1>
						{{/if}}
		</div>
	</div>
	<div class="row col-md-12">
		<a href="/agregar" class="btn btn-primary">Agregar productos</a></td>
	</div>
</main>
